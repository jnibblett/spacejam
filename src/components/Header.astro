---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="#">Updates</HeaderLink>
			<HeaderLink href="#">Contact</HeaderLink>
		</div>
		<div class="social-links">
			<a href="#" target="_blank">
				<span class="sr-only">Social Link 1</span>
				
<svg
  width="120"
  height="120"
  viewBox="0 0 120 120"
  xmlns="http://www.w3.org/2000/svg"
>
  <!-- Satellite body -->
  <rect
    x="45"
    y="50"
    width="30"
    height="20"
    rx="4"
    fill="none"
    stroke="#ffffff"
    stroke-width="2"
  />

  <!-- Antenna -->
  <line
    x1="60"
    y1="50"
    x2="60"
    y2="35"
    stroke="#ffffff"
    stroke-width="2"
    stroke-linecap="round"
  />

  <!-- Signal waves -->
  <path
    d="M35 35 A25 25 0 0 1 85 35"
    fill="none"
    stroke="#ffffff"
    stroke-width="2"
  />
  <path
    d="M25 35 A35 35 0 0 1 95 35"
    fill="none"
    stroke="#ffffff"
    stroke-width="2"
  />
</svg>
<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
					><path
						fill="currentColor"
						d="#"></path></svg
				>
			</a>
			<a href="#" target="_blank">
				<span class="sr-only">Social Link 2</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
					><path
						fill="currentColor"
						d="#"></path></svg
				>
			</a>
			<a href="#" target="_blank">
				<span class="sr-only">Social Link 3</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
					><path
						fill="currentColor"
						d="#"></path></svg
				>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
