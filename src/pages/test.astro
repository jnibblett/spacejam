<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Beautiful Layout Template</title>
  <meta name="description" content="A modern responsive layout with subtle motion and theme toggle." />

  <style>
    /* ========== Design Tokens ========== */
    :root{
      --bg: #0b1220;
      --surface: rgba(255,255,255,.06);
      --surface2: rgba(255,255,255,.10);
      --text: rgba(255,255,255,.92);
      --muted: rgba(255,255,255,.68);
      --border: rgba(255,255,255,.14);

      --brand1: #7c3aed;   /* violet */
      --brand2: #06b6d4;   /* cyan */
      --accent: #22c55e;   /* green */

      --shadow: 0 18px 45px rgba(0,0,0,.35);
      --radius: 18px;
      --max: 1120px;
      --blur: 18px;

      --font: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji","Segoe UI Emoji";
      --mono: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Courier New", monospace;
    }

    /* Light theme */
    [data-theme="light"]{
      --bg: #f6f7fb;
      --surface: rgba(0,0,0,.04);
      --surface2: rgba(0,0,0,.06);
      --text: rgba(10,12,18,.92);
      --muted: rgba(10,12,18,.62);
      --border: rgba(0,0,0,.12);
      --shadow: 0 16px 40px rgba(0,0,0,.14);
    }

    /* ========== Base ========== */
    *{ box-sizing: border-box; }
    html{ scroll-behavior: smooth; }
    body{
      margin:0;
      font-family: var(--font);
      color: var(--text);
      background: radial-gradient(900px 420px at 12% 0%, rgba(124,58,237,.35), transparent 60%),
                  radial-gradient(900px 420px at 88% 10%, rgba(6,182,212,.28), transparent 60%),
                  radial-gradient(900px 560px at 50% 100%, rgba(34,197,94,.18), transparent 65%),
                  var(--bg);
      min-height: 100vh;
    }
    a{ color: inherit; text-decoration: none; }
    .container{ width: min(var(--max), calc(100% - 2.4rem)); margin: 0 auto; }

    /* ========== Top Nav ========== */
    .nav{
      position: sticky;
      top: 0;
      z-index: 20;
      padding: .85rem 0;
      background: rgba(10,14,24,.35);
      backdrop-filter: blur(var(--blur));
      border-bottom: 1px solid rgba(255,255,255,.06);
      transition: box-shadow .25s ease, border-color .25s ease, background .25s ease;
    }
    [data-theme="light"] .nav{
      background: rgba(246,247,251,.65);
      border-bottom: 1px solid rgba(0,0,0,.06);
    }
    .nav.scrolled{
      box-shadow: var(--shadow);
      border-bottom-color: var(--border);
    }
    .nav-row{
      display:flex; align-items:center; justify-content:space-between; gap: 1rem;
    }
    .brand{
      display:flex; align-items:center; gap:.7rem; font-weight: 700; letter-spacing: .2px;
    }
    .logo{
      width: 40px; height: 40px; border-radius: 14px;
      background: linear-gradient(135deg, var(--brand1), var(--brand2));
      box-shadow: 0 10px 24px rgba(124,58,237,.25);
    }
    .links{
      display:flex; gap:1rem; align-items:center;
    }
    .links a{
      padding: .55rem .75rem;
      border-radius: 12px;
      color: var(--muted);
      transition: background .2s ease, color .2s ease;
    }
    .links a:hover{ background: var(--surface); color: var(--text); }

    .btn{
      display:inline-flex; align-items:center; justify-content:center;
      gap:.55rem;
      padding: .75rem 1rem;
      border-radius: 14px;
      border: 1px solid var(--border);
      background: var(--surface);
      color: var(--text);
      box-shadow: 0 10px 22px rgba(0,0,0,.16);
      transition: transform .15s ease, background .2s ease, border-color .2s ease;
      cursor: pointer;
    }
    .btn:hover{ transform: translateY(-1px); background: var(--surface2); }
    .btn.primary{
      border-color: transparent;
      background: linear-gradient(135deg, var(--brand1), var(--brand2));
      box-shadow: 0 16px 35px rgba(124,58,237,.28);
    }
    .btn.primary:hover{ filter: brightness(1.03); }
    .btn.ghost{
      background: transparent;
      box-shadow: none;
    }

    /* ========== Hero ========== */
    .hero{
      padding: 4.2rem 0 2.6rem;
    }
    .hero-grid{
      display:grid;
      grid-template-columns: 1.15fr .85fr;
      gap: 2rem;
      align-items: center;
    }
    .pill{
      display:inline-flex; align-items:center; gap:.55rem;
      padding: .4rem .7rem;
      border-radius: 999px;
      border: 1px solid var(--border);
      background: rgba(255,255,255,.05);
      color: var(--muted);
      font-size: .92rem;
    }
    .title{
      margin: 1rem 0 .75rem;
      font-size: clamp(2.2rem, 3.8vw, 3.4rem);
      line-height: 1.05;
      letter-spacing: -.02em;
    }
    .subtitle{
      margin: 0 0 1.35rem;
      color: var(--muted);
      font-size: 1.08rem;
      line-height: 1.55;
      max-width: 58ch;
    }
    .cta-row{ display:flex; gap:.85rem; flex-wrap: wrap; align-items:center; }

    .hero-card{
      border-radius: var(--radius);
      border: 1px solid var(--border);
      background: linear-gradient(180deg, rgba(255,255,255,.08), rgba(255,255,255,.03));
      backdrop-filter: blur(var(--blur));
      box-shadow: var(--shadow);
      padding: 1.15rem;
      position: relative;
      overflow: hidden;
    }
    .hero-card::before{
      content:"";
      position:absolute; inset:-30%;
      background: radial-gradient(circle at 30% 30%, rgba(124,58,237,.35), transparent 60%),
                  radial-gradient(circle at 70% 60%, rgba(6,182,212,.25), transparent 60%);
      transform: rotate(12deg);
      opacity: .9;
    }
    .hero-card > *{ position: relative; }
    .stat-row{
      display:grid;
      grid-template-columns: repeat(3, 1fr);
      gap: .85rem;
      margin-top: .9rem;
    }
    .stat{
      border-radius: 14px;
      background: rgba(0,0,0,.12);
      border: 1px solid rgba(255,255,255,.10);
      padding: .85rem;
    }
    [data-theme="light"] .stat{
      background: rgba(255,255,255,.55);
      border-color: rgba(0,0,0,.08);
    }
    .stat b{ display:block; font-size: 1.15rem; }
    .stat span{ color: var(--muted); font-size: .9rem; }

    /* ========== Sections ========== */
    section{ padding: 2.6rem 0; }
    .section-head{
      display:flex; align-items:flex-end; justify-content:space-between; gap:1rem;
      margin-bottom: 1.35rem;
    }
    .section-head h2{
      margin:0;
      font-size: 1.55rem;
      letter-spacing: -.01em;
    }
    .section-head p{ margin:0; color: var(--muted); max-width: 62ch; }

    .cards{
      display:grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 1rem;
    }
    .card{
      border-radius: var(--radius);
      border: 1px solid var(--border);
      background: rgba(255,255,255,.05);
      backdrop-filter: blur(var(--blur));
      padding: 1.15rem;
      box-shadow: 0 10px 26px rgba(0,0,0,.18);
      transition: transform .18s ease, background .18s ease;
    }
    .card:hover{ transform: translateY(-3px); background: rgba(255,255,255,.07); }
    .icon{
      width: 44px; height: 44px; border-radius: 14px;
      display:grid; place-items:center;
      background: linear-gradient(135deg, rgba(124,58,237,.35), rgba(6,182,212,.25));
      border: 1px solid rgba(255,255,255,.14);
      margin-bottom: .85rem;
      font-size: 1.1rem;
    }
    .card h3{ margin: .2rem 0 .4rem; }
    .card p{ margin: 0; color: var(--muted); line-height: 1.55; }

    .split{
      display:grid;
      grid-template-columns: 1fr 1fr;
      gap: 1.2rem;
      align-items: center;
    }
    .panel{
      border-radius: var(--radius);
      border: 1px solid var(--border);
      background: rgba(255,255,255,.05);
      padding: 1.2rem;
      box-shadow: var(--shadow);
    }
    .panel h3{ margin-top: 0; }
    .code{
      font-family: var(--mono);
      font-size: .95rem;
      background: rgba(0,0,0,.25);
      border: 1px solid rgba(255,255,255,.12);
      border-radius: 14px;
      padding: .85rem 1rem;
      overflow:auto;
      line-height: 1.55;
    }
    [data-theme="light"] .code{
      background: rgba(255,255,255,.85);
      border-color: rgba(0,0,0,.10);
    }

    /* Optional: Make ALL body text Courier (typewriter vibe) */
    /* body { font-family: "Courier New", Courier, monospace; } */

    /* ========== CTA Band ========== */
    .cta{
      border-radius: calc(var(--radius) + 6px);
      border: 1px solid var(--border);
      background: linear-gradient(135deg, rgba(124,58,237,.28), rgba(6,182,212,.18));
      box-shadow: var(--shadow);
      padding: 1.3rem;
      display:flex; align-items:center; justify-content:space-between;
      gap: 1rem;
      flex-wrap: wrap;
    }
    .cta h3{ margin:0; }
    .cta p{ margin:.25rem 0 0; color: var(--muted); }

    /* ========== Footer ========== */
    footer{
      padding: 2.2rem 0 2.6rem;
      color: var(--muted);
      border-top: 1px solid rgba(255,255,255,.06);
      margin-top: 1.8rem;
    }
    [data-theme="light"] footer{
      border-top-color: rgba(0,0,0,.06);
    }
    .footer-row{
      display:flex; justify-content:space-between; gap: 1rem; flex-wrap: wrap;
      align-items:center;
    }

    /* ========== Responsive ========== */
    @media (max-width: 960px){
      .hero-grid{ grid-template-columns: 1fr; }
      .cards{ grid-template-columns: 1fr; }
      .split{ grid-template-columns: 1fr; }
      .links{ display:none; }
    }

